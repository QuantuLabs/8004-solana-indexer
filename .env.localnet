# Database Mode: "local" (SQLite/Prisma) | "supabase" (PostgreSQL via Supabase)
DB_MODE="local"

# Local Database (SQLite via Prisma) - only used when DB_MODE=local
DATABASE_URL="file:./data/indexer-localnet.db"

# Solana Localnet (solana-test-validator)
RPC_URL="http://127.0.0.1:8899"
WS_URL="ws://127.0.0.1:8900"

# Program ID (deployed by anchor deploy --provider.cluster localnet)
PROGRAM_ID="6MuHv4dY4p9E4hSCEPr9dgbCSpMhq8x1vrUexbMVjfw1"

# Indexer Mode: "auto" | "polling" | "websocket"
# auto = tries WebSocket first, falls back to polling if unavailable
INDEXER_MODE="auto"

# Polling Configuration (faster for localnet)
POLLING_INTERVAL="2000"
BATCH_SIZE="100"

# WebSocket Configuration (faster reconnect for localnet)
WS_RECONNECT_INTERVAL="1000"
WS_MAX_RETRIES="3"

# Logging (debug for localnet development)
LOG_LEVEL="debug"

# URI Metadata Indexing: "off" | "normal" | "full"
INDEX_METADATA="normal"
